<!DOCTYPE HTML>
<html lang="{{ language }}" class="{{ default_theme }} sidebar-visible" dir="{{ text_direction }}">
    <head>
        <!-- Book generated using mdBook -->
        <meta charset="UTF-8">
        <title>{{ title }}</title>
        {{#if is_print }}
        <meta name="robots" content="noindex">
        {{/if}}
        {{#if base_url}}
        <base href="{{ base_url }}">
        {{/if}}


        <!-- Custom HTML head -->
        {{> head}}

        <meta name="description" content="{{ description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="theme-color" content="#ffffff">

        {{#if favicon_svg}}
        <link rel="icon" href="static/img/favicon.svg">
        {{/if}}
        {{#if favicon_png}}
        <link rel="shortcut icon" href="static/img/favicon.png">
        {{/if}}
        <link rel="stylesheet" href="static/css/general.css">
        <link rel="stylesheet" href="static/css/icons.css">
        {{#if print_enable}}
        <link rel="stylesheet" href="static/css/print.css" media="print">
        {{/if}}
        <!-- Fonts -->
        <link rel="stylesheet" href="static/fonts/fonts.css">
        <!-- Highlight.js Stylesheets -->
        <link rel="stylesheet" id="mdbook-highlight-css" href="static/css/highlight.css">
        <link rel="stylesheet" id="mdbook-tomorrow-night-css" href="{{ resource "tomorrow-night.css" }}">
        <link rel="stylesheet" id="mdbook-ayu-highlight-css" href="{{ resource "ayu-highlight.css" }}">

        <!-- Custom theme stylesheets -->
        {{#each additional_css}}
        <link rel="stylesheet" href="{{ resource this }}">
        {{/each}}
        <script type="importmap">
        {
          "imports": {
            "three": "/static/js/three.module.min.js",
            "three/addons/": "/static/js/addons/"
          }
        }
        </script>

        <!-- Scripts -->
        <script src="static/js/svgpanzoom.min.js"></script>
        <script src="static/js/mermaid.min.js"></script>
        <script src="static/js/mermaid-panzoom.js"></script>
        <script src="static/js/alpine.min.js" defer></script>
        {{!-- <script src="static/js/alpine-init.js"></script> --}}

        <!-- âœ… LOAD YOUR WEB COMPONENT HERE -->
        {{!-- <script src="static/js/color-table.js"></script> --}}
        {{!-- <script src="static/js/display.js" defer></script> --}}
        <script type="module" src="static/js/three-init.js" defer></script>

        {{#if mathjax_support}}
        <!-- MathJax -->
        <script src="static/js/MathJax.js"></script>
        {{/if}}

        <!-- Provide site root and default themes to javascript -->
        <script>
            const path_to_root = "{{ path_to_root }}";
            const default_light_theme = "{{ default_theme }}";
            const default_dark_theme = "{{ preferred_dark_theme }}";
        {{#if search_js}}
            window.path_to_searchindex_js = "{{ resource "searchindex.js" }}";
        {{/if}}
        </script>
        <!-- Start loading toc.js asap -->
        <script src="{{ resource "toc.js" }}"></script>
    </head>
    <body>
        <!-- Main container that preserves 16:9 aspect ratio -->
        <div id="hx-wrapper">
            <!-- Outer frame (full 1920x1080 area) -->
            <div class="frame-outer">
                <!-- Inner content area (92.6% of outer) -->
                <div class="frame-inner">
                    <!-- Canvas element -->
                    <div id="hx-canvas"></div>

                    <!-- Glass overlay effect -->
                    <div class="glass">
                        <div class="glass-filter"></div>
                        <div class="glass-overlay"></div>
                        <div class="glass-specular"></div>
                    </div>
                    {{!-- <div class="glass-navbar">
                    <div class="glass-navbar back"></div>
                    <div class="glass-navbar front"></div> --}}
                    <div class="glass-navbar">
                        <div class="glass-navbar back"></div>
                        <div class="glass-navbar front">
                            <button class="nav-btn print-btn" aria-label="Print">
                                <span class="icon icon-print"></span>
                            </button>
                            <button class="nav-btn fullscreen-btn" aria-label="Toggle fullscreen">
                                <span class="icon icon-fullscreen"></span>
                            </button>
                        </div>
                    </div>
                    </div>

                </div>

                <!-- Decorative frame border (sits on top) -->
                <div class="frame-border"></div>
            </div>
        </div>
    </body>
</html>
